<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60263437"
    tools:context=".RegisterActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_back"
        android:id="@+id/topBar"
        app:title="Register"
        android:background="@color/colorPrimary"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your info below :"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_margin="20dp"
        android:layout_below="@id/topBar"
        android:id="@+id/info"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Select Image"
        android:layout_margin="5dp"
        android:textColor="@color/colorText"
        android:background="@drawable/circle"
        android:id="@+id/profilePicture"
        android:layout_below="@id/info"
        android:layout_centerHorizontal="true"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:id="@+id/profile_Picture"
        android:layout_below="@id/info"
        android:layout_centerHorizontal="true"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_Picture"
        android:layout_margin="10dp"
        android:hint="E-mail ID *"
        app:boxStrokeWidth="5dp"
        app:boxStrokeColor="@color/colorAccent"
        android:textColorHint="@color/colorText"
        android:id="@+id/fieldEmailR">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorText"
            android:inputType="textEmailAddress"
            android:id="@+id/textEmailR"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldEmailR"
        android:layout_margin="10dp"
        android:hint="Full Name *"
        app:boxStrokeWidth="5dp"
        app:boxStrokeColor="@color/colorAccent"
        android:textColorHint="@color/colorText"
        android:id="@+id/fieldNameR">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorText"
            android:inputType="textEmailAddress"
            android:id="@+id/textNameR"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldNameR"
        android:layout_margin="10dp"
        android:hint="Password *"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:boxStrokeWidth="5dp"
        app:boxStrokeColor="@color/colorAccent"
        android:textColorHint="@color/colorText"
        android:id="@+id/fieldPasswordR">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorText"
            android:inputType="textPassword"
            android:id="@+id/textPasswordR"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldPasswordR"
        android:layout_margin="10dp"
        android:hint="Confirm Password *"
        app:boxStrokeWidth="5dp"
        app:boxStrokeColor="@color/colorAccent"
        android:textColorHint="@color/colorText"
        android:id="@+id/fieldConfirmPasswordR">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorText"
            android:inputType="textPassword"
            android:id="@+id/textConfirmPasswordR"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fieldConfirmPasswordR"
        android:orientation="horizontal"
        android:gravity="center">
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_margin="5dp"
        android:id="@+id/registerButton" />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_margin="5dp"
        android:id="@+id/resetButton"/>
    </LinearLayout>
</RelativeLayout>