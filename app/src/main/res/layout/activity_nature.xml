<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C68F8F"
    tools:context=".topics.NatureActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBarNature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="Science &amp; Nature"
        app:titleTextColor="@color/colorText" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBarNature"
        android:layout_margin="10dp"
        android:text="Question : "
        android:textColor="@color/colorText"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/natureQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_margin="10dp"
        android:text="Loading Question...."
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cgOptionNature"
        android:layout_below="@id/natureQuestion"
        android:orientation="vertical" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNatureNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cgOptionNature"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:text="Next Question" />

    <FrameLayout
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnNatureNext"
        android:background="@drawable/circle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/scoreT1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:text="Questions Attempted : "
                android:textColor="@color/colorText"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/scoreNatureQuestions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/scoreNatureQuestions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_margin="10dp"
                android:layout_toEndOf="@id/scoreT1"
                android:text="1"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/scoreT1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/scoreT2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/scoreT1"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:text="Correct Answers : "
                android:textColor="@color/colorText"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/scoreNatureAnswers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scoreT1" />

            <TextView
                android:id="@+id/scoreNatureAnswers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/scoreT1"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/scoreT2"
                android:text="0"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/scoreT2"
                app:layout_constraintTop_toBottomOf="@id/scoreNatureQuestions" />

            <TextView
                android:id="@+id/scoreT3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/scoreT2"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:text="Correct % : "
                android:textColor="@color/colorText"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/scoreNatureTotal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scoreT2" />

            <TextView
                android:id="@+id/scoreNatureTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/scoreT2"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/scoreT3"
                android:text="0"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/scoreT3"
                app:layout_constraintTop_toBottomOf="@id/scoreNatureAnswers" />

            <TextView
                android:id="@+id/scoreT4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/scoreT3"
                android:layout_margin="10dp"
                android:paddingLeft="20dp"
                android:text="High Score % : "
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/highScoreNature"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scoreT3" />

            <TextView
                android:id="@+id/highScoreNature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/scoreT3"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/scoreT4"
                android:text="0"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/scoreT4"
                app:layout_constraintTop_toBottomOf="@id/scoreNatureTotal" />

            <TextView
                android:id="@+id/scoreT5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/scoreT3"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:text="(atleast 10 questions attempted)"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/scoreT4" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNatureQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/score"
        android:layout_centerHorizontal="true"
        android:text="Quit" />

</RelativeLayout>