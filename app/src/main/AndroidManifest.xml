<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.quizap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_quiz"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_quiz_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".topics.ComicActivity"></activity>
        <activity android:name=".topics.TelevisionActivity" />
        <activity android:name=".topics.MusicActivity" />
        <activity android:name=".topics.FilmActivity" />
        <activity android:name=".topics.NatureActivity" />
        <activity android:name=".topics.GadgetActivity" />
        <activity android:name=".topics.VehicleActivity" />
        <activity android:name=".topics.CartoonActivity" />
        <activity android:name=".topics.AnimeActivity" />
        <activity android:name=".topics.HistoryActivity" />
        <activity android:name=".topics.MathsActivity" />
        <activity android:name=".topics.BgameActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".topics.GeographyActivity" />
        <activity android:name=".topics.VgameActivity" />
        <activity android:name=".topics.GkActivity" />
        <activity android:name=".topics.SportsActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>